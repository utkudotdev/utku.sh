---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
    entry: CollectionEntry<"projects" | "research">;
    class?: string;
}

const { entry } = Astro.props;

const { Content } = await entry.render();
---

<div class={Astro.props.class}>
    <h2 class="mb-2 text-lg font-semibold text-off-black">
        {entry.data.title}
    </h2>
    <div class="flex flex-col-reverse overflow-auto sm:block">
        <Image
            src={entry.data.image}
            alt={entry.data.imageAlt}
            class="mx-auto mt-4 max-w-[75%] rounded-md object-contain sm:float-right sm:mb-4 sm:ml-4 sm:mt-0 sm:h-auto sm:max-w-[35%]"
        />
        <div
            class="text-off-black [&_a]:text-link hover:[&_a]:text-link-highlight [&_p:not(:last-child)]:mb-4"
        >
            <Content />
        </div>
    </div>
</div>
